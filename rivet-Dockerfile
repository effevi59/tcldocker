FROM alpine:3.8
MAINTAINER Metodo Srl <segreteria@metodo.net>

RUN set -x \
    && apk add --update --no-cache openrc su-exec ca-certificates nano curl findutils \
    # Disable getty's
    && sed -i 's/^\(tty\d\:\:\)/#\1/g' /etc/inittab \
    && sed -i \
        # Change subsystem type to "docker"
        -e 's/#rc_sys=".*"/rc_sys="docker"/g' \
        # Allow all variables through
        -e 's/#rc_env_allow=".*"/rc_env_allow="\*"/g' \
        # Start crashed services
        -e 's/#rc_crashed_stop=.*/rc_crashed_stop=NO/g' \
        -e 's/#rc_crashed_start=.*/rc_crashed_start=YES/g' \
        # Define extra dependencies for services
        -e 's/#rc_provide=".*"/rc_provide="loopback net"/g' \
        /etc/rc.conf \
    # Remove unnecessary services
    && rm -f /etc/init.d/hwdrivers \
            /etc/init.d/hwclock \
            /etc/init.d/hwdrivers \
            /etc/init.d/modules \
            /etc/init.d/modules-load \
            /etc/init.d/modloop \
    # Can't do cgroups
    # && sed -i 's/cgroup_add_service /# cgroup_add_service /g' /lib/rc/sh/openrc-run.sh \
    && sed -i 's/VSERVER/DOCKER/Ig' /lib/rc/sh/init.sh \
    # FIXED FROM ORIGINAL
    && sed -i '/\tcgroup_add_service/d' /lib/rc/sh/openrc-run.sh \
    # ADDONS FOR RIVET
    && apk add procps bash curl tzdata findutils \
    && apk add apache2 apache2-dev tcl tcl-dev gcc libc-dev make \
    && ln -fs /usr/share/zoneinfo/Europe/Rome /etc/localtime \
    && rc-update add apache2 \
    && mkdir /rivet && cd /rivet \
    && curl -o rivet.taz http://mirror.nohup.it/apache/tcl/rivet/rivet-current.tar.gz \
    && tar -xf rivet.taz && rm -f rivet.taz \
    && mv `ls` source && cd source && sh configure && make install \
    && cp /rivet/source/doc/examples/hello.rvt /var/www/localhost/htdocs/. \
    && cp /rivet/source/doc/examples/color-table.tcl /var/www/localhost/htdocs/. \
    && echo "ServerName rivet.rivet.com" >> /etc/apache2/conf.d/rivet.conf \
    && echo "LoadModule rivet_module modules/mod_rivet.so" >> /etc/apache2/conf.d/rivet.conf \
    && echo "AddType application/x-httpd-rivet rvt" >> /etc/apache2/conf.d/rivet.conf \
    && echo "AddType application/x-rivet-tcl tcl" >> /etc/apache2/conf.d/rivet.conf \
    && echo DONE
    # END ADDONS

WORKDIR /etc/init.d
CMD ["/sbin/init"]
